<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.pin.recommend.ui.databinding.DoubleConverter" />

        <import type="com.pin.recommend.ui.databinding.IntConverter" />

        <import type="com.pin.recommend.ui.databinding.DateConverter" />

        <variable
            name="activity"
            type="android.app.Activity" />

        <variable
            name="state"
            type="com.pin.recommend.ui.payment.PaymentWholePeriodViewModelState" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.payment.PaymentWholePeriodActivity">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:characterBackgroundAppearance="@{state.appearance}" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bar"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/ToolBarStyle" />
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/character_icon"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="-140dp"
                android:background="@drawable/icon_background"
                android:src='@{state.appearance.iconImage}'
                app:civ_border_color="#eeeeee"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="208dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/character_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:homeTextAppearance="@{state.appearance}"
                    android:padding="4dp"
                    android:text='@{state.characterName}'
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/first_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:homeTextAppearance="@{state.appearance}"
                    android:text="にPayして"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:homeTextAppearance="@{state.appearance}"
                    android:padding="4dp"
                    android:shadowRadius="4"
                    android:text='@{IntConverter.toString(state.paymentAmount) + "円"}'
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:homeTextAppearance="@{state.appearance}"
                    android:padding="4dp"
                    android:text="になりました"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
