<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="state"
            type="com.pin.recommend.ui.gacha.GachaBadgeViewModelState" />

        <variable
            name="vm"
            type="com.pin.recommend.ui.gacha.GachaBadgeViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@{state.appearance.backgroundImage}"
            android:elevation="-1dp" />

        <FrameLayout
            android:id="@+id/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@{state.appearance.backgroundColor}"
            android:alpha="@{state.appearance.backgroundImageOpacity}" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bar"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/ToolBarStyle" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.cardview.widget.CardView
                android:id="@+id/titleContainer"
                android:visibility="@{state.isComplete ? View.GONE : View.VISIBLE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:maxWidth="200dp"
                    android:minWidth="180dp"
                    android:maxHeight="160dp"
                    android:minHeight="120dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="@{state.title}"
                            android:layout_gravity="top|center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.pin.recommend.ui.component.ToteBagView
                            android:id="@+id/toteBagView"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:background="@color/white" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp" />

                        <Button
                            android:id="@+id/roleGachaButton"
                            android:onClick="onRollGacha"
                            android:visibility="@{state.isRolling? View.GONE : View.VISIBLE}"
                            android:text="広告を見てガチャを回す"
                            android:layout_gravity="bottom|center"
                            android:textColor="@color/blue_900"
                            android:background="?android:attr/selectableItemBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:visibility="@{state.isRolling? View.VISIBLE : View.GONE}" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/resultContainer"
                android:visibility="@{state.isComplete ? View.VISIBLE : View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="300dp"
                    android:layout_height="300dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/character_icon"
                        android:layout_marginTop="30dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_background"
                        android:imageBitmap="@{state.resultImage}"
                        app:civ_border_color="#eeeeee"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:text="@{state.resultMessage}"
                        android:textSize="22sp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/oneMoreContainer"
                android:visibility="@{state.isComplete ? View.VISIBLE : View.GONE }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:maxWidth="300dp"
                    android:minWidth="200dp"
                    android:maxHeight="200dp"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/oneMore"
                        android:onClick="@{()-> vm.reset()}"
                        android:text="もう一度ガチャる"
                        android:layout_gravity="bottom|center"
                        android:textColor="@color/blue_900"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/saveImage"
                        android:text="画像を保存"
                        android:onClick="onSaveImage"
                        android:layout_gravity="bottom|center"
                        android:textColor="@color/blue_900"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>