<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.pin.recommend.model.viewmodel.IntConverter"/>
        <import type="com.pin.recommend.model.viewmodel.DateConverter"/>
        <variable name="vm" type="com.pin.recommend.model.viewmodel.EditEventViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:paddingLeft="6dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="6dp"
                    android:text="日付"
                    android:labelFor="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:background="#ffffff"
                    android:padding="6dp"
                    android:minHeight="46dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/date"
                        android:text="@{DateConverter.toString(vm.date)}"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:paddingLeft="6dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="6dp"
                    android:text="タイトル"
                    android:labelFor="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:paddingLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/title"
                        android:minHeight="46dp"
                        android:text="@={vm.title}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:paddingLeft="6dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="6dp"
                    android:text="メモ"
                    android:labelFor="@+id/memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/memo"
                        android:minHeight="46dp"
                        android:text="@={vm.memo}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>