<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="#ffffff"
                    android:padding="6dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="パスコードロック" />
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"/>
                    <Switch
                        android:id="@+id/passcode_rock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/setting_toolbar"
                    android:onClick="onClickSettingToolbar"
                    android:background="#ffffff"
                    android:padding="6dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="ツールバーの設定"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/export_backup"
                    android:onClick="onExportBackup"
                    android:background="#ffffff"
                    android:padding="6dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="バックアップの作成"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/import_backup"
                    android:onClick="onImportBackup"
                    android:background="#ffffff"
                    android:padding="6dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="バックアップの復元"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/link_to_privacy_policy"
                    android:onClick="onClickPrivacyPolicy"
                    android:background="#ffffff"
                    android:padding="6dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="プライバシーポリシー"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:onClick="onClickPrivacyPolicy"
                    android:paddingLeft="6dp"
                    android:paddingTop="12dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="6dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12dp"
                        android:text="多分きっとあなたが気に入るアプリ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:onClick="onClickEmotionDiary"
                    android:background="#ffffff"
                    android:padding="6dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        android:layout_height="30dp"
                        android:layout_width="30dp">
                        <ImageView
                            android:src="@drawable/emotion_diary"
                            android:scaleType="centerCrop"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:paddingLeft="6dp"
                        android:textSize="12sp"
                        android:text="気分を記録できるチャット風つぶやき日記　Meemo(ミーモ)
"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:onClick="onClickDietSupport"
                    android:background="#ffffff"
                    android:padding="6dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        android:layout_height="30dp"
                        android:layout_width="30dp">
                        <ImageView
                            android:src="@drawable/diet_support"
                            android:scaleType="centerCrop"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:paddingLeft="6dp"
                        android:textSize="12sp"
                        android:text="推しダイエット - 推しと一緒に体重記録"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:onClick="onClickWordBook"
                    android:background="#ffffff"
                    android:padding="6dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="8dp"
                        android:layout_height="30dp"
                        android:layout_width="30dp">
                        <ImageView
                            android:src="@drawable/wordbook"
                            android:scaleType="centerCrop"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:paddingLeft="6dp"
                        android:textSize="12sp"
                        android:text="推しと学ぶ韓国語・英語"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ad_container"
            android:orientation="vertical"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp">
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>